{
    "version": 2,
    "builds": [
        {
            "src": "index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/**/*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/public"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}